{
  "name": "vnote",
  "version": "0.1.0",
  "private": true,
  "productName": "VNote",
  "main": "electron/main.js",
  "author": "oakmans",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "start": "set BROWSER=none && react-scripts start",
    "start-electron": "set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build-electron": "mkdir build/src ; robocopy electron build/electron /S ; robocopy src/shared build/src/shared /S",
    "package": "electron-builder build --win -c.extraMetadata.main=build/electron/main.js --publish never"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "bootstrap": "^4.5.2",
    "electron": "^9.1.2",
    "pell": "^1.0.6",
    "react-bootstrap": "^1.3.0",
    "react-html5video": "^2.5.1",
    "react-player": "^2.6.0",
    "react-tinymce": "^0.7.0",
    "youtube-api-search": "0.0.5"
  },
  "build": {
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "repo": "vnote",
      "owner": "oakmans"
    }
  }
}
